<div class="music-term-page">
<div class="termtoform">
 <%= link_to "音楽用語を紹介する", new_music_term_path, class: "term-to-form" %>
</div>

<%= form_with(url:  search_music_terms_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>

<div class="termlist">
  <% @music_terms.each do |term| %>
    <%= render partial: "musicterm", locals: { musicterm: term} %>
  <% end %>
</div>
</div>
